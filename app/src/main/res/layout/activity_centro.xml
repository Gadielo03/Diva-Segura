<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- BotÃ³n de volver mejorado -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="VOLVER"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:drawableStart="@drawable/ic_arrow_back_white"
        android:drawablePadding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:iconTint="#FFFFFF"
        app:backgroundTint="#6A1B9A"
        app:cornerRadius="24dp"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1dp"
        app:rippleColor="#9C27B0"
        app:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Tarjeta principal con ScrollView -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- TÃ­tulo con gradiente -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_gradient"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CENTRO DE INFORMACIÃ“N"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"/>
                </LinearLayout>

                <!-- Banner informativo -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#F3E5F5"
                    app:cardCornerRadius="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iconInfo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_info_alert"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            app:tint="#7B1FA2"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Conoce tus derechos y recursos disponibles contra la violencia"
                            android:textColor="#7B1FA2"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_toEndOf="@id/iconInfo"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>



                <!-- Contenido de pestaÃ±as (Derechos por defecto) -->
                <LinearLayout
                    android:id="@+id/contentDerechos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Tarjeta de derecho 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#F8F1FF"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”¹ Derecho a una vida libre de violencia"
                                android:textColor="#6A1B9A"
                                android:textStyle="bold"
                                android:textSize="16sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Toda persona tiene derecho a que se respete su integridad fÃ­sica, psicolÃ³gica y sexual."
                                android:textColor="#616161"
                                android:textSize="14sp"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Tarjeta de derecho 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#F8F1FF"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”¹ Derecho a recibir protecciÃ³n"
                                android:textColor="#6A1B9A"
                                android:textStyle="bold"
                                android:textSize="16sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Las autoridades deben proporcionar medidas de protecciÃ³n inmediata cuando exista riesgo."
                                android:textColor="#616161"
                                android:textSize="14sp"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <!-- Contenido de otras pestaÃ±as (inicialmente oculto) -->
                <LinearLayout
                    android:id="@+id/contentProcedimientos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Contenido procedimientos... -->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contentRecursos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Contenido recursos legales... -->
                </LinearLayout>

                <!-- SecciÃ³n de preguntas frecuentes -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â“ PREGUNTAS FRECUENTES"
                    android:textColor="#6A1B9A"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#E1BEE7"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Pregunta 1 -->
                        <LinearLayout
                            android:id="@+id/question1_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Â¿CÃ³mo denunciar violencia domÃ©stica?"
                                    android:textColor="#6A1B9A"
                                    android:textSize="14sp"/>

                                <ImageView
                                    android:id="@+id/expand_icon1"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_expand_more"
                                    app:tint="#6A1B9A" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/answer1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Puedes acudir directamente a la fiscalÃ­a mÃ¡s cercana o llamar al 911 en caso de emergencia."
