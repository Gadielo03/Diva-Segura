                        </LinearLayout>

                        <!-- Divisor -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F5F5F5"/>

                        <!-- Pregunta 2 -->
                        <LinearLayout
                            android:id="@+id/question2_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:padding="16dp"
                            android:layout_marginTop="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/question2_text"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Â¿QuÃ© documentos necesito para denunciar?"
                                    android:textColor="#6A1B9A"
                                    android:textSize="14sp"/>

                                <ImageView
                                    android:id="@+id/expand_icon2"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_expand_more"
                                    app:tint="#6A1B9A" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/answer2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No necesitas documentos inicialmente, pero ayuda llevar identificaciÃ³n y cualquier evidencia."
                                android:textColor="#616161"
                                android:textSize="13sp"
                                android:layout_marginTop="8dp"
                                android:visibility="gone"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>