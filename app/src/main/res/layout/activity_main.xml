<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D017D"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diva Segura"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="46sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAlert"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@drawable/main_circle_button"
        android:text="MANTEN PRESIONADO\nPARA ALERTAR"
        android:textColor="@color/white"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAlert">

        <ImageButton
            android:id="@+id/btnCall"
            android:layout_width="40sp"
            android:layout_height="115sp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="@drawable/circle_button"
            android:contentDescription="Llamada"
            android:src="@drawable/ic_phone_call" />

        <ImageButton
            android:id="@+id/btnLocation"
            android:layout_width="40sp"
            android:layout_height="115sp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="@drawable/circle_button"
            android:contentDescription="Localizacion"
            android:padding="16dp"
            android:src="@drawable/ic_location" />

        <ImageButton
            android:id="@+id/btnInfo"
            android:layout_width="40sp"
            android:layout_height="115sp"
            android:layout_weight="1"
            android:layout_margin="10sp"
            android:background="@drawable/circle_button"
            android:contentDescription="Info"
            android:padding="16dp"
            android:src="@drawable/ic_info" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>