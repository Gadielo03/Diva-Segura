<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D017D"
    android:orientation="vertical"
    tools:context=".WelcomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â¡Bienvenida!"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="46sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrate para Comenzar"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/etTelefonoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Numero de Telefono"
                android:inputType="phone"
                android:textColor="@color/white"
                android:textColorHint="@color/material_dynamic_tertiary80"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/etNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nombre Completo"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/material_dynamic_tertiary80"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/etDomicilioUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Domicilio"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/material_dynamic_tertiary80"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/btnTakePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:drawableStart="@android:drawable/ic_menu_camera"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:text="Tomar Foto"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Colored" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacto de Emergencia 1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etTelefonoContactoEmergencia1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Numero de Telefono"
                android:inputType="phone"
                android:textColor="@color/white"
                android:textColorHint="@color/material_dynamic_tertiary80"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/etNombreContactoEmergencia1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nombre Completo"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/material_dynamic_tertiary80"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/etRelacionContactoEmergencia1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Relacion"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/material_dynamic_tertiary80"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacto de Emergencia 2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/etTelefonoContactoEmergencia2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Numero de Telefono"
                android:inputType="phone"
                android:textColor="@color/white"
                android:textColorHint="@color/material_dynamic_tertiary80"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/etNombreContactoEmergencia2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nombre Completo"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/material_dynamic_tertiary80"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/etRelacionContactoEmergencia2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Relacion"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/material_dynamic_tertiary80"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#C119DF"
                android:text="Registrar"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>