<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient_terms"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/btn_volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volver"
            android:layout_marginBottom="24dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:drawablePadding="8dp"
            android:drawableTint="#4D017D"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_rounded_bg"
            android:elevation="12dp"
            android:outlineAmbientShadowColor="#4D017D"
            android:outlineSpotShadowColor="#4D017D"
            android:padding="24dp"
            android:clipToPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”’ AVISO DE PRIVACIDAD - DIVA SEGURA"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_aviso_privacidad"
                android:textSize="16sp"
                android:textColor="#555555"
                android:lineSpacingMultiplier="1.4"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>